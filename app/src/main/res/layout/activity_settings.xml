<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SettingsActivity">

    <!-- 顶部导航栏 - 延伸至状态栏 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:background="?attr/colorSurface"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 状态栏占位区域 -->
        <View
            android:id="@+id/statusBarSpacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorSurface" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorSurface"
            android:elevation="0dp"
            app:title="设置"
            app:titleTextColor="?attr/colorOnSurface"
            app:titleCentered="true"
            app:navigationIconTint="?attr/colorOnSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 主内容区域 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 主题设置区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- 主题设置标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主题设置"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp" />

                <!-- 主题切换按钮组 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/theme_selector_background"
                    android:padding="4dp">

                    <!-- 自动模式按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonThemeAuto"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="自动"
                        android:textSize="14sp"
                        android:layout_marginEnd="2dp" />

                    <!-- 浅色模式按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonThemeLight"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="浅色"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="2dp" />

                    <!-- 深色模式按钮 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonThemeDark"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="深色"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp" />

                </LinearLayout>

                <!-- 主题说明 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动模式将跟随系统设置"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutlineVariant"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="32dp" />

            <!-- 模型选择区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- 模型选择标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI模型选择"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp" />

                <!-- 当前选中模型显示 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCurrentModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textCurrentModelName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未选择模型"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/textCurrentModelProvider"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请选择AI模型"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_drop_down"
                            android:contentDescription="展开选择"
                            app:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- 模型分组列表 -->
                <LinearLayout
                    android:id="@+id/layoutModelGroups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="16dp"
                    android:visibility="gone">

                    <!-- 动态添加的模型分组内容 -->

                </LinearLayout>

                <!-- 模型选择说明 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击上方卡片选择AI模型"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

            <!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutlineVariant"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="32dp" />

            <!-- 模型配置区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- 模型配置标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模型配置"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp" />

                <!-- OpenAI配置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonModelConfig"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="配置OpenAI系列模型"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="start"
                    app:iconPadding="12dp" />

                <!-- Google AI配置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonGoogleAIConfig"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="配置Google AI系列模型"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="start"
                    app:iconPadding="12dp" />

                <!-- Anthropic配置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAnthropicConfig"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="配置Anthropic系列模型"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="start"
                    app:iconPadding="12dp" />

                <!-- xAI配置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonXAIConfig"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="xAI配置"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="start"
                    app:iconPadding="12dp" />

                <!-- DeepSeek配置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDeepSeekConfig"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="DeepSeek配置"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="start"
                    app:iconPadding="12dp" />

                <!-- Moonshot配置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonMoonshotConfig"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Moonshot配置"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="start"
                    app:iconPadding="12dp" />

                <!-- 阿里云百炼配置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAliyunConfig"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="阿里云百炼配置"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="start"
                    app:iconPadding="12dp" />

                <!-- 火山方舟配置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonVolcanoConfig"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="火山方舟配置"
                    android:textSize="16sp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="start"
                    app:iconPadding="12dp" />

                <!-- 模型配置说明 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配置不同AI服务商的模型参数和设置"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>