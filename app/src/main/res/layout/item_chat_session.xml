<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iconChatHistory"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_chat_history"
        android:layout_marginEnd="16dp"
        app:tint="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/textChatTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="对话标题"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageButton
        android:id="@+id/buttonEditChat"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_edit"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="8dp"
        android:contentDescription="编辑对话标题"
        app:tint="?attr/colorOnSurface" />

    <ImageButton
        android:id="@+id/buttonDeleteChat"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="8dp"
        android:contentDescription="删除对话"
        app:tint="?attr/colorError" />

</LinearLayout>