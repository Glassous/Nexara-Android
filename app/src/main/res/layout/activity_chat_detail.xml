<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="false"
    tools:context=".ChatDetailActivity">

    <!-- 内容区域 - 延伸至全页面 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <!-- 消息内容直接显示 -->
        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="80dp"
            android:paddingBottom="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:lineSpacingExtra="4dp"
            android:textColor="?attr/colorOnSurface"
            android:textIsSelectable="true"
            android:textSize="16sp"
            tools:text="这是一条示例消息内容，用户可以选择和复制这些文本。这个页面专门用于展示消息的完整内容，并提供文本选择功能。" />

    </ScrollView>

    <!-- 透明工具栏容器 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <!-- 透明工具栏 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIconTint="?attr/colorOnSurface">

            <!-- 字号调节滑动条 - 放在工具栏右侧 -->
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginEnd="4dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/fontSizeSlider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="12"
                    android:valueTo="24"
                    android:value="16"
                    android:stepSize="1"
                    app:thumbColor="?attr/colorPrimary"
                    app:trackColorActive="?attr/colorPrimary"
                    app:trackColorInactive="?attr/colorOutline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>